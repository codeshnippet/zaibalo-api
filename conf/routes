# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Angular scripts, templates, libraries and artifacts
GET        /app/                                   staticDir:/public/app
GET        /partials/                              staticDir:/public/app/partials

# Home page
GET        /                                       Application.index
GET        /client                                 Application.client
GET        /knockout                               Application.knockout
GET        /avatar                                 Application.avatar

# Users
POST       /users                                  users.Users.createUser

GET        /users/{loginName}                      users.Users.getUserByLogin
PUT        /users/{id}                             users.Users.editUser
DELETE     /users/{id}                             users.Users.deleteUser
GET        /users/{loginName}/posts                users.Users.getUserPosts
GET        /users/{loginName}/posts/count          users.Users.getUserPostsCount

# Posts
GET        /posts                                  posts.Posts.getPosts
GET        /posts/count                            posts.Posts.getPostsCount
POST       /posts                                  posts.Posts.createPost
GET        /posts/hashtag/{name}                   posts.Posts.getPostsByTag
GET        /posts/hashtag/{name}/count             posts.Posts.getPostsByTagCount

GET        /posts/{id}                             posts.Posts.getPost
PUT        /posts/{id}                             posts.Posts.editPost
DELETE     /posts/{id}                             posts.Posts.deletePost

GET        /posts/{postId}/comments                comments.Comments.getPostComments
POST       /posts/{postId}/comments                comments.Comments.createPostComment

# Comments
GET        /comments                               comments.Comments.getComments

PUT        /comments/{id}                          comments.Comments.editComment
DELETE     /comments/{id}                          comments.Comments.deleteComment

# Post ratings
GET        /posts/{postId}/post-ratings            PostRatings.getPostRatings
POST       /posts/{postId}/post-ratings            PostRatings.createPostRating

GET        /post-ratings/{id}                      PostRatings.getPostRating
PUT        /post-ratings/{id}                      PostRatings.updatePostRating
DELETE     /post-ratings/{id}                      PostRatings.deletePostRating

# Comment ratings
GET        /comments/{commentId}/comment-ratings   CommentsRatings.getCommentsRatings
POST       /comments/{commentId}/comment-ratings   CommentsRatings.createCommentRating

GET        /comment-ratings/{id}                   CommentsRatings.getCommentRating
PUT        /comment-ratings/{id}                   CommentsRatings.updateCommentRating
DELETE     /comment-ratings/{id}                   CommentsRatings.deleteCommentRating

# Secure controllers
POST       /login                                  authentication.Login.login
POST       /oauth-login                            oauth.Oauths.login

# Ignore favicon requests
GET     /favicon.ico                               404

GET     /public/                                   staticDir:public

# Catch all
*       /{controller}/{action}                  {controller}.{action}
